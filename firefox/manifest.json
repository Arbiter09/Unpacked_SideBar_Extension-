{
  "manifest_version": 2,
  "name": "Firefox Sidebar Extension",
  "version": "1.0.1",
  "description": "Firefox sidebar extension",

  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_title": "Toggle Sidebar"
  },

  "sidebar_action": {
    "default_title": "Extension Sidebar",
    "default_panel": "index.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": ["tabs", "storage", "http://*/*", "https://*/*"],

  "applications": {
    "gecko": {
      "id": "sidebar-extension@example.com",
      "strict_min_version": "57.0"
    }
  }
}
