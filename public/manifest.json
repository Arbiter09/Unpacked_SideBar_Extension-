{
  "manifest_version": 3,
  "name": "My Side-Panel Extension",
  "version": "1.0.0",
  "description": "Side panel demo",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "Open Side Panel"
  },

  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "scripting",
    "sidePanel"     
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
